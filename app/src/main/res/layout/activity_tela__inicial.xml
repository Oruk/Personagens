<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo"
    tools:context="god.luisinho.lucas.personagens.Tela_Inicial">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <!-- Aatrox -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_toLeftOf="@+id/amu"
                            android:background="@drawable/aatrox"
                            android:id="@+id/aat"/>
                        <!-- Amumu -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@drawable/amumu"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
                            android:id="@+id/amu"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"/>

                        <!-- Azir -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_toRightOf="@+id/amu"
                            android:background="@drawable/azir"
                            android:id="@+id/azi"/>

                        <!-- Diana -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_below="@+id/amu"
                            android:layout_toLeftOf="@+id/Ir"
                            android:background="@drawable/diana"
                            android:id="@+id/dia"
                            />

                        <!-- Irelia -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@drawable/irelia"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/amu"
                            android:id="@+id/Ir"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"/>

                        <!-- Jhin -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_below="@+id/amu"
                            android:layout_toRightOf="@+id/Ir"
                            android:background="@drawable/jhin"
                            android:id="@+id/jhi"/>

                        <!-- Talon -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_below="@+id/Ir"
                            android:layout_toLeftOf="@+id/Thr"
                            android:background="@drawable/talon"
                            android:id="@+id/ta"/>

                        <!-- Thresh -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@drawable/thresh"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/Ir"
                            android:id="@+id/Thr"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"/>

                        <!-- Udyr -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_below="@+id/Ir"
                            android:layout_toRightOf="@id/Thr"
                            android:background="@drawable/udyr"
                            android:id="@+id/ud"/>

                        <!-- Vayne -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_below="@+id/Thr"
                            android:layout_toLeftOf="@+id/War"
                            android:background="@drawable/vayne"
                            android:id="@+id/vay"/>

                        <!-- Warwick -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@drawable/warwick"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/Thr"
                            android:id="@+id/War"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"/>

                        <!-- Zed -->
                        <Button
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_below="@+id/Thr"
                            android:layout_toRightOf="@+id/War"
                            android:background="@drawable/zed"
                            android:id="@+id/zed"/>
                </RelativeLayout>
        </ScrollView>
</RelativeLayout>
